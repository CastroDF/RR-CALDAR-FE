{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        // We only want single quotes
        "quotes": ["error", "single"],
        // We want to force semicolons
        "semi": ["error", "always"],
        // We use 2 spaces to indent our code
        "indent": ["error", 2],
        // We want to avoid useless spaces
        "no-multi-spaces": ["error"],
        // We don't use prop-types
        "react/prop-types": 0
    }
}
